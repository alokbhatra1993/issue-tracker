<!-- views/projectDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Project Detail Page</title>
  </head>
  
  <style>
    body {
      background: darkblue;
      color: #fff;
      padding: 40px;
    }
    body.project-tracker button {
    /* display: flex; */
    align-items: center;
    margin: 15px 0 !important;
    /* display: flex; */
    border: none;
    padding: 6px 30px;
    border-radius: 3px;
    background: transparent;
    border: 1px solid #fff;
    color: #fff;
}
    .project-tracker ul {
      padding-left: 0px;
    }
  </style>
  <body class="project-tracker">
    <h1>Project <%= projects[parseInt(projectId)]?.name %></h1>

    <!-- Filter by labels form -->
    <form action="/filter" method="POST">
      <label for="labels">Filter by Labels:</label>
      <input
        class="form-control"
        type="text"
        name="labels"
        id="labels"
        placeholder="Enter labels (comma-separated)"
      />
      <button type="submit">Filter</button>
    </form>

    <!-- Filter by author form -->
    <form action="/filter" method="POST">
      <label for="author">Filter by Author:</label>
      <input
        class="form-control"
        type="text"
        name="author"
        id="author"
        placeholder="Enter author name"
      />
      <button type="submit">Filter</button>
    </form>

    <!-- Search form -->
    <form action="/search" method="POST">
      <label for="search">Search by Title/Description:</label>
      <input
        class="form-control"
        type="text"
        name="search"
        id="search"
        placeholder="Enter keywords"
      />
      <button class="search-m" type="submit">Search</button>
    </form>

    <!-- List of issues -->
    <ul>
      <% issues.forEach(issue => { %>
      <li>
        <h3><%= issue.title %></h3>
        <p><%= issue.description %></p>
        <p>Author: <%= issue.author %></p>
      </li>
      <% }); %>
    </ul>

    <!-- Create Issue button -->
    <a class="create-issue-btn" href="/create-issue?projectId=<%= projectId %>">Create Issue</a>
  </body>
</html>
